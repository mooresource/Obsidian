-- UI Library by Roblox Developer
-- Load with: local Library = loadstring(game:HttpGet("URL"))()

local Library = {}
Library.__index = Library

-- Theme Configuration
local Theme = {
    Primary = Color3.fromRGB(30, 30, 40),
    Secondary = Color3.fromRGB(40, 40, 50),
    Accent = Color3.fromRGB(0, 120, 215),
    Text = Color3.fromRGB(240, 240, 240),
    SubText = Color3.fromRGB(180, 180, 180),
    Success = Color3.fromRGB(50, 200, 100),
    Danger = Color3.fromRGB(220, 60, 60),
    Border = Color3.fromRGB(60, 60, 70),
    ToggleOn = Color3.fromRGB(50, 180, 80),
    ToggleOff = Color3.fromRGB(100, 100, 110)
}

-- Utility Functions
local function Create(class, props)
    local obj = Instance.new(class)
    for prop, value in pairs(props) do
        if prop == "Parent" then
            obj.Parent = value
        else
            obj[prop] = value
        end
    end
    return obj
end

local function Tween(obj, props, duration, style, direction)
    local tweenInfo = TweenInfo.new(duration or 0.2, style or Enum.EasingStyle.Quad, direction or Enum.EasingDirection.Out)
    game:GetService("TweenService"):Create(obj, tweenInfo, props):Play()
end

-- Main Library Functions
function Library:CreateWindow(title)
    local Window = {}
    Window.Tabs = {}
    Window.ActiveTab = nil
    
    -- Create ScreenGui
    local ScreenGui = Create("ScreenGui", {
        Name = "UILibrary",
        Parent = game:GetService("CoreGui") or game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    })
    
    -- Main Container
    local MainFrame = Create("Frame", {
        Name = "MainFrame",
        Parent = ScreenGui,
        Size = UDim2.new(0, 500, 0, 400),
        Position = UDim2.new(0.5, -250, 0.5, -200),
        BackgroundColor3 = Theme.Primary,
        BorderSizePixel = 0,
        ClipsDescendants = true
    })
    
    Create("UICorner", {
        CornerRadius = UDim.new(0, 8),
        Parent = MainFrame
    })
    
    Create("UIStroke", {
        Parent = MainFrame,
        Color = Theme.Border,
        Thickness = 1
    })
    
    -- Title Bar
    local TitleBar = Create("Frame", {
        Name = "TitleBar",
        Parent = MainFrame,
        Size = UDim2.new(1, 0, 0, 40),
        BackgroundColor3 = Theme.Secondary,
        BorderSizePixel = 0
    })
    
    Create("UICorner", {
        CornerRadius = UDim.new(0, 8),
        Parent = TitleBar
    })
    
    local TitleLabel = Create("TextLabel", {
        Name = "TitleLabel",
        Parent = TitleBar,
        Size = UDim2.new(1, -40, 1, 0),
        Position = UDim2.new(0, 10, 0, 0),
        BackgroundTransparency = 1,
        Text = title or "UI Library",
        TextColor3 = Theme.Text,
        TextSize = 18,
        Font = Enum.Font.Gotham,
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    -- Close Button
    local CloseButton = Create("TextButton", {
        Name = "CloseButton",
        Parent = TitleBar,
        Size = UDim2.new(0, 30, 0, 30),
        Position = UDim2.new(1, -35, 0.5, -15),
        BackgroundColor3 = Theme.Danger,
        Text = "X",
        TextColor3 = Color3.fromRGB(255, 255, 255),
        TextSize = 14,
        Font = Enum.Font.GothamBold,
        BorderSizePixel = 0
    })
    
    Create("UICorner", {
        CornerRadius = UDim.new(0, 6),
        Parent = CloseButton
    })
    
    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)
    
    -- Drag functionality
    local dragging = false
    local dragInput, dragStart, startPos
    
    TitleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    TitleBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    
    -- Tabs Container
    local TabsContainer = Create("Frame", {
        Name = "TabsContainer",
        Parent = MainFrame,
        Size = UDim2.new(0, 120, 1, -40),
        Position = UDim2.new(0, 0, 0, 40),
        BackgroundColor3 = Theme.Secondary,
        BorderSizePixel = 0
    })
    
    local TabButtons = Create("ScrollingFrame", {
        Name = "TabButtons",
        Parent = TabsContainer,
        Size = UDim2.new(1, 0, 1, 0),
        BackgroundTransparency = 1,
        BorderSizePixel = 0,
        ScrollBarThickness = 3,
        CanvasSize = UDim2.new(0, 0, 0, 0),
        AutomaticCanvasSize = Enum.AutomaticSize.Y
    })
    
    Create("UIListLayout", {
        Parent = TabButtons,
        Padding = UDim.new(0, 5),
        SortOrder = Enum.SortOrder.LayoutOrder
    })
    
    Create("UIPadding", {
        Parent = TabButtons,
        PaddingLeft = UDim.new(0, 5),
        PaddingTop = UDim.new(0, 5),
        PaddingRight = UDim.new(0, 5),
        PaddingBottom = UDim.new(0, 5)
    })
    
    -- Content Container
    local ContentContainer = Create("Frame", {
        Name = "ContentContainer",
        Parent = MainFrame,
        Size = UDim2.new(1, -120, 1, -40),
        Position = UDim2.new(0, 120, 0, 40),
        BackgroundColor3 = Theme.Primary,
        BorderSizePixel = 0,
        ClipsDescendants = true
    })
    
    local TabContent = Create("ScrollingFrame", {
        Name = "TabContent",
        Parent = ContentContainer,
        Size = UDim2.new(1, 0, 1, 0),
        BackgroundTransparency = 1,
        BorderSizePixel = 0,
        ScrollBarThickness = 5,
        CanvasSize = UDim2.new(0, 0, 0, 0),
        AutomaticCanvasSize = Enum.AutomaticSize.Y
    })
    
    Create("UIListLayout", {
        Parent = TabContent,
        Padding = UDim.new(0, 10),
        SortOrder = Enum.SortOrder.LayoutOrder
    })
    
    Create("UIPadding", {
        Parent = TabContent,
        PaddingLeft = UDim.new(0, 15),
        PaddingTop = UDim.new(0, 15),
        PaddingRight = UDim.new(0, 15),
        PaddingBottom = UDim.new(0, 15)
    })
    
    -- Window Methods
    function Window:CreateTab(name)
        local Tab = {}
        Tab.Name = name
        Tab.Elements = {}
        Tab.Visible = false
        
        -- Tab Button
        local TabButton = Create("TextButton", {
            Name = name .. "TabButton",
            Parent = TabButtons,
            Size = UDim2.new(1, 0, 0, 35),
            BackgroundColor3 = Theme.Primary,
            Text = name,
            TextColor3 = Theme.SubText,
            TextSize = 14,
            Font = Enum.Font.Gotham,
            AutoButtonColor = false,
            BorderSizePixel = 0
        })
        
        Create("UICorner", {
            CornerRadius = UDim.new(0, 6),
            Parent = TabButton
        })
        
        -- Tab Content Frame
        local TabFrame = Create("Frame", {
            Name = name .. "TabFrame",
            Parent = TabContent,
            Size = UDim2.new(1, 0, 0, 0),
            BackgroundTransparency = 1,
            Visible = false
        })
        
        Create("UIListLayout", {
            Parent = TabFrame,
            Padding = UDim.new(0, 10),
            SortOrder = Enum.SortOrder.LayoutOrder
        })
        
        Create("UIPadding", {
            Parent = TabFrame,
            PaddingLeft = UDim.new(0, 5),
            PaddingRight = UDim.new(0, 5)
        })
        
        -- Activate this tab when clicked
        TabButton.MouseButton1Click:Connect(function()
            Window:SwitchTab(Tab)
        end)
        
        -- Hover effects
        TabButton.MouseEnter:Connect(function()
            if not Tab.Visible then
                Tween(TabButton, {BackgroundColor3 = Color3.fromRGB(50, 50, 60)}, 0.2)
            end
        end)
        
        TabButton.MouseLeave:Connect(function()
            if not Tab.Visible then
                Tween(TabButton, {BackgroundColor3 = Theme.Primary}, 0.2)
            end
        end)
        
        -- Tab Methods
        function Tab:CreateButton(text, callback)
            local Button = {}
            
            local ButtonFrame = Create("Frame", {
                Name = text .. "Button",
                Parent = TabFrame,
                Size = UDim2.new(1, 0, 0, 35),
                BackgroundColor3 = Theme.Secondary,
                BorderSizePixel = 0
            })
            
            Create("UICorner", {
                CornerRadius = UDim.new(0, 6),
                Parent = ButtonFrame
            })
            
            Create("UIStroke", {
                Parent = ButtonFrame,
                Color = Theme.Border,
                Thickness = 1
            })
            
            local ButtonLabel = Create("TextLabel", {
                Name = "ButtonLabel",
                Parent = ButtonFrame,
                Size = UDim2.new(1, 0, 1, 0),
                BackgroundTransparency = 1,
                Text = text,
                TextColor3 = Theme.Text,
                TextSize = 14,
                Font = Enum.Font.Gotham,
                TextWrapped = true
            })
            
            -- Click functionality
            local function OnClick()
                if callback then
                    pcall(callback)
                end
                Tween(ButtonFrame, {BackgroundColor3 = Theme.Accent}, 0.1)
                wait(0.1)
                Tween(ButtonFrame, {BackgroundColor3 = Theme.Secondary}, 0.1)
            end
            
            ButtonFrame.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    Tween(ButtonFrame, {BackgroundColor3 = Theme.Accent}, 0.1)
                end
            end)
            
            ButtonFrame.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    OnClick()
                end
            end)
            
            -- Hover effects
            ButtonFrame.MouseEnter:Connect(function()
                Tween(ButtonFrame, {BackgroundColor3 = Color3.fromRGB(50, 50, 60)}, 0.2)
                Tween(ButtonLabel, {TextColor3 = Color3.fromRGB(255, 255, 255)}, 0.2)
            end)
            
            ButtonFrame.MouseLeave:Connect(function()
                Tween(ButtonFrame, {BackgroundColor3 = Theme.Secondary}, 0.2)
                Tween(ButtonLabel, {TextColor3 = Theme.Text}, 0.2)
            end)
            
            -- Method to update button
            function Button:Update(newText, newCallback)
                ButtonLabel.Text = newText or text
                callback = newCallback or callback
            end
            
            table.insert(self.Elements, Button)
            return Button
        end
        
        function Tab:CreateToggle(text, callback)
            local Toggle = {}
            Toggle.State = false
            
            local ToggleFrame = Create("Frame", {
                Name = text .. "Toggle",
                Parent = TabFrame,
                Size = UDim2.new(1, 0, 0, 35),
                BackgroundColor3 = Theme.Secondary,
                BorderSizePixel = 0
            })
            
            Create("UICorner", {
                CornerRadius = UDim.new(0, 6),
                Parent = ToggleFrame
            })
            
            Create("UIStroke", {
                Parent = ToggleFrame,
                Color = Theme.Border,
                Thickness = 1
            })
            
            local ToggleLabel = Create("TextLabel", {
                Name = "ToggleLabel",
                Parent = ToggleFrame,
                Size = UDim2.new(0.7, -5, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                Text = text,
                TextColor3 = Theme.Text,
                TextSize = 14,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextWrapped = true
            })
            
            local ToggleButton = Create("Frame", {
                Name = "ToggleButton",
                Parent = ToggleFrame,
                Size = UDim2.new(0, 50, 0, 25),
                Position = UDim2.new(1, -65, 0.5, -12.5),
                BackgroundColor3 = Theme.ToggleOff,
                BorderSizePixel = 0
            })
            
            Create("UICorner", {
                CornerRadius = UDim.new(0, 25),
                Parent = ToggleButton
            })
            
            local ToggleKnob = Create("Frame", {
                Name = "ToggleKnob",
                Parent = ToggleButton,
                Size = UDim2.new(0, 21, 0, 21),
                Position = UDim2.new(0, 2, 0.5, -10.5),
                BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                BorderSizePixel = 0
            })
            
            Create("UICorner", {
                CornerRadius = UDim.new(0, 21),
                Parent = ToggleKnob
            })
            
            -- Toggle functionality
            local function ToggleState()
                Toggle.State = not Toggle.State
                
                if Toggle.State then
                    Tween(ToggleButton, {BackgroundColor3 = Theme.ToggleOn}, 0.2)
                    Tween(ToggleKnob, {Position = UDim2.new(0, 27, 0.5, -10.5)}, 0.2)
                else
                    Tween(ToggleButton, {BackgroundColor3 = Theme.ToggleOff}, 0.2)
                    Tween(ToggleKnob, {Position = UDim2.new(0, 2, 0.5, -10.5)}, 0.2)
                end
                
                if callback then
                    pcall(callback, Toggle.State)
                end
            end
            
            ToggleFrame.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    ToggleState()
                end
            end)
            
            -- Hover effects
            ToggleFrame.MouseEnter:Connect(function()
                Tween(ToggleFrame, {BackgroundColor3 = Color3.fromRGB(50, 50, 60)}, 0.2)
                Tween(ToggleLabel, {TextColor3 = Color3.fromRGB(255, 255, 255)}, 0.2)
            end)
            
            ToggleFrame.MouseLeave:Connect(function()
                Tween(ToggleFrame, {BackgroundColor3 = Theme.Secondary}, 0.2)
                Tween(ToggleLabel, {TextColor3 = Theme.Text}, 0.2)
            end)
            
            -- Method to set toggle state
            function Toggle:Set(state)
                if Toggle.State ~= state then
                    ToggleState()
                end
            end
            
            -- Method to get toggle state
            function Toggle:Get()
                return Toggle.State
            end
            
            table.insert(self.Elements, Toggle)
            return Toggle
        end
        
        function Tab:CreateLabel(text)
            local Label = {}
            
            local LabelFrame = Create("Frame", {
                Name = text .. "Label",
                Parent = TabFrame,
                Size = UDim2.new(1, 0, 0, 25),
                BackgroundTransparency = 1
            })
            
            local LabelText = Create("TextLabel", {
                Name = "LabelText",
                Parent = LabelFrame,
                Size = UDim2.new(1, 0, 1, 0),
                BackgroundTransparency = 1,
                Text = text,
                TextColor3 = Theme.SubText,
                TextSize = 14,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left,
                TextWrapped = true
            })
            
            function Label:Update(newText)
                LabelText.Text = newText
            end
            
            table.insert(self.Elements, Label)
            return Label
        end
        
        -- Set this as active tab if it's the first one
        if #Window.Tabs == 0 then
            Window:SwitchTab(Tab)
        end
        
        table.insert(Window.Tabs, Tab)
        return Tab
    end
    
    function Window:SwitchTab(tab)
        -- Deactivate all tabs
        for _, t in pairs(Window.Tabs) do
            t.Visible = false
            -- Update tab button
            local btn = ScreenGui:FindFirstChild(t.Name .. "TabButton")
            if btn then
                Tween(btn, {BackgroundColor3 = Theme.Primary, TextColor3 = Theme.SubText}, 0.2)
            end
            -- Hide tab content
            local frame = TabContent:FindFirstChild(t.Name .. "TabFrame")
            if frame then
                frame.Visible = false
            end
        end
        
        -- Activate selected tab
        tab.Visible = true
        Window.ActiveTab = tab
        
        -- Update tab button
        local btn = ScreenGui:FindFirstChild(tab.Name .. "TabButton")
        if btn then
            Tween(btn, {BackgroundColor3 = Theme.Accent, TextColor3 = Color3.fromRGB(255, 255, 255)}, 0.2)
        end
        
        -- Show tab content
        local frame = TabContent:FindFirstChild(tab.Name .. "TabFrame")
        if frame then
            frame.Visible = true
        end
    end
    
    function Window:Destroy()
        ScreenGui:Destroy()
    end
    
    return Window
end

return Library
